
# This Dockerfile Contains:
Miniconda
Nipype
FSL
dask, dash, plotly, matplotlib, scikit, jupyter, nibabel
And others

# To Download prebuilt image:
docker pull fgiuste/neuro

# To build image from Dockerfile (Dockerfile must be in . and named "Dockerfile"):
docker build --tag neuro .

# Frink:
docker run -it --rm -v /data/FOX_FullResData:/data/FOX_FullResData:rw -v /data/Gliomics:/data/Gliomics:rw -v /code/notebooks:/code/notebooks:rw -v /code/scripts:/code/scripts:rw -v /SASRAID:/data/SASRAID:rw -v /nvme:/data/nvme:rw -p 8123:8888 fgiuste/neuro:V4

# Whorlwind:
docker run -it --rm -v /home/fgiuste/ehechtDogTest:/data/ehechtDogTest:rw -v /home/fgiuste/Gliomics:/data/Gliomics:rw -v /home/fgiuste/FOX_FullResData:/data/FOX_FullResData:rw -v /home/fgiuste/output:/output:rw -v /home/fgiuste/notebooks:/home/neuro/notebooks:rw -p 8123:8888 fgiuste/neuro:V4

# ML Whorlwind:
nvidia-docker run -it --rm -v /home/fgiuste/notebooks/Simpsons/undergrads:/home/neuro/notebooks:rw -v /home/fgiuste/output/undergrads:/output:rw -p 7777:8888 fgiuste/neuroml

# To run jupyter-notebook:
